<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <!--<ImageView
        android:layout_alignBottom="@+id/contentMessageChat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ivUserChat" />-->

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/contentMessageChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_backgroundColor="#fff"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_arrowGravity="end"
        app:cmv_arrowPosition="left"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
        android:layout_toEndOf="@+id/ivUserChat"
        android:layout_toRightOf="@+id/ivUserChat">

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:text="Alessandr sdlsdklsd \n slkdlskdlks \nsdlkslkds dsdso"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </me.himanshusoni.chatmessageview.ChatMessageView>


    <TextView
        android:id="@+id/txtsendusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="10sp"
        android:paddingBottom="8dp"
        android:layout_alignStart="@+id/contentMessageChat"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/contentMessageChat"
        android:layout_below="@id/contentMessageChat"
        android:layout_toRightOf="@+id/ivUserChat"
        android:layout_toEndOf="@+id/ivUserChat" />

    <TextView
        android:text="22/06/2016"
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:paddingStart="6dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/contentMessageChat"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtsendusername"
        android:layout_toEndOf="@+id/txtsendusername"
        android:paddingLeft="6dp" />
</RelativeLayout>